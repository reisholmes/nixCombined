{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "palette": {
    "blue": "#8aadf4",
    "closer": "p:os",
    "crust": "#181926",
    "lavender": "#b7bdf8",
    "mantle": "#1e2030",
    "os": "#5b6078",
    "pink": "#f6bde6",
    "yellow": "#eed49f"
  },
  "transient_prompt": {
    "template": "‚ùØ ",
    "foreground": "#B48EAD",
    "foreground_templates": [
      "{{ if gt .Code 0 }}#BF616A{{ end }}"
    ]
  },
  "console_title_template": "{{if .Root}}(Admin){{end}} {{.PWD}}",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "properties": {
            "cache_duration": "none",
            "discharging_icon": "\udb85\udfde",
            "style": "plain"
          },
          "template": "{{ if .Error }}{{ .Error }}{{ else if eq .State.String \"Discharging\" }}{{ .Icon }}{{ .Percentage }}% {{ end }}",
          "type": "battery",
          "style": "plain",
          "foreground_templates": [
            "{{if eq \"Charged\" .State.String}}p:os{{end}}",
            "{{if eq \"Charging\" .State.String}}p:os{{end}}",
            "{{if eq \"Discharging\" .State.String}}p:yellow{{end}}",
            "{{if eq \"Full\" .State.String}}p:os{{end}}",
            "{{if eq \"Not Charging\" .State.String}}p:os{{end}}"
          ]
        },
        {
          "properties": {
            "cache_duration": "none"
          },
          "template": "{{ .UserName }} ",
          "foreground": "p:blue",
          "type": "session",
          "style": "plain"
        },
        {
          "properties": {
            "cache_duration": "none",
            "max_depth": 2,
            "style": "agnoster_short"
          },
          "template": "{{ .Path }} ",
          "foreground": "p:pink",
          "type": "path",
          "style": "plain"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "properties": {
            "cache_duration": "5s",
            "command": "/bin/sh $HOME/.config/oh-my-posh/nix-packages.sh"
          },
          "template": "{{ if ne .Output \"\" }} üì¶ nix:{{ .Output }} depth:{{ .Env.SHLVL }} {{ end }}",
          "foreground": "p:blue",
          "type": "command",
          "style": "plain"
        },
        {
          "properties": {
            "branch_icon": "\ue725 ",
            "cache_duration": "none",
            "cherry_pick_icon": "\ue29b ",
            "commit_icon": "\uf417 ",
            "fetch_stash_count": true,
            "fetch_status": true,
            "fetch_upstream_icon": true,
            "merge_icon": "\ue727 ",
            "no_commits_icon": "\uf0c3 ",
            "rebase_icon": "\ue728 ",
            "revert_icon": "\uf0e2 ",
            "tag_icon": "\uf412 "
          },
          "template": "{{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }} ",
          "foreground": "p:lavender",
          "type": "git",
          "style": "plain"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "properties": {
            "cache_duration": "none",
            "style": "austin"
          },
          "template": " {{ .FormattedMs }} ",
          "foreground": "#A3BE8C",
          "type": "executiontime",
          "style": "plain"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "properties": {
            "always_enabled": true,
            "cache_duration": "none"
          },
          "template": "‚ùØ ",
          "foreground": "#B48EAD",
          "type": "status",
          "style": "plain",
          "foreground_templates": [
            "{{ if gt .Code 0 }}#BF616A{{ end }}"
          ]
        }
      ],
      "newline": true
    }
  ],
  "version": 3
}
